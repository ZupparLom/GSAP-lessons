//анимация текста (по буква) при загрузки страницы
let split = new SplitText("#ID", {type: "chars"});
//now animate each character into place from 100px above, fading in:
gsap.from(split.chars, {
  duration: 1, 
  y: 100, 
  autoAlpha: 0, 
  stagger: 0.05
});

//анимация текста (по линиям) при нажатии элемента
let split = new SplitText("#ID", {type: "lines"});
const play = document.querySelector('.play');

const playAnimation = gsap.from(split.lines, {
  duration: 1, 
  y: 30, 
  autoAlpha: 0, 
  stagger: 0.05,
  pause: true
});

play.addEventListener("click", () => {
startAnimation.timeScale(1).play();
})
